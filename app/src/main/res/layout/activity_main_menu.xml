<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.willdo.frcscouter.app.MainMenu">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add Entry"
        android:id="@+id/addButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="addButtonAction" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit Entry"
        android:id="@+id/editButton"
        android:layout_below="@+id/addButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="editButtonAction" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Rankings"
        android:id="@+id/calcButton"
        android:layout_below="@+id/editButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="calcButtonAction" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Clear Database"
        android:id="@+id/clearButton"
        android:layout_below="@+id/calcButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="clearButtonAction" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Rankings"
        android:id="@+id/rankButton"
        android:layout_below="@+id/clearButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="rankButtonAction" />
</RelativeLayout>
